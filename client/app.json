{
  "expo": {
    "name": "Budget Buddy",
    "slug": "Plan your budget and track your expenses",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/app_logo.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash-screen2.png",
      "resizeMode": "contain",
      "backgroundColor": "#8274BC"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"

      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
